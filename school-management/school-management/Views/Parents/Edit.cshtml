@model school_management.Models.Parent

@{
    ViewData["Title"] = "Edit";
}

<div class="card row col-6 offset-3">
    <div class="card-body px-5 py-5">
        <h1 class="text-center mb-5">Edit parent details</h1>
        <div>
            <form asp-action="Edit">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3 form-group">
                   <label asp-for="FirstName" class="control-label"></label>
                   <input asp-for="FirstName" class="form-control" />
                   <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3 form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3 form-group">
                    <label asp-for="BirthDate" for="BirthDate" class="form-label">Birth date</label>
                    <input asp-for="BirthDate" type="date" class="form-control" id="BirthDate" name="BirthDate">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="col-12 flex-row justify-content-end d-flex mt-3 form-group">
                        <div class="me-2">
                            <a asp-action="Index" type="button" class="btn btn-secondary">Back</a>
                        </div>
                        <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
