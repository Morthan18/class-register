@model school_management.Models.Class

@{
    ViewData["Title"] = "Edit";
}
<div class="card row col-6 offset-3">
    <div class="card-body px-5 py-5">
        <h1 class="text-center mb-5">Edit class details</h1>
        <div>
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3 form-group">
                    <label asp-for="Name" for="Name" class="form-label">Class name</label>
                    <input asp-for="Name" type="text" class="form-control" id="Name" name="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 form-group">
                    <label asp-for="Year" for="Year" class="form-label">Year</label>
                    <input asp-for="Year" type="number" class="form-control" id="Year" name="Year">
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="mb-3 form-group">
                    <label for="ClassTeacherId" class="control-label">Teacher</label>
                    <select name="ClassTeacherId" id="ClassTeacherId" class="form-select">
                        <option>Select teacher</option>
                        @foreach(var teacher in  ViewBag.ClassTeachers){
                            @if (teacher.Id.Equals(@Model.ClassTeacher.Id))
                            {
                             <option selected value="@teacher.Id">@teacher.FullName</option>
                            }
                            else
                            {
                             <option  value="@teacher.Id">@teacher.FullName</option>
                            }
                           
                        }
                    </select>
                </div>
                <div class="col-12 flex-row justify-content-end d-flex mt-3 form-group">
                    <div class="me-2">
                        <a asp-action="Index" type="button" class="btn btn-secondary">Back</a>
                    </div>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
