@model IEnumerable<school_management.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="main-card-bg main-table-container">

    <div class="d-flex justify-content-between align-items-center my-3 mx-3">
        <h4>
            Students
        </h4>
        <div>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">Birth date</th>
                <th scope="col">Parent</th>
                <th scope="col">Class</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var student in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.BirthDate</td>
                    <td>@student.ParentFullName</td>
                    <td>@student.ClassName</td>
                    <td>

                        <a asp-action="Details" class="action-icon" asp-route-id="@student.Id">
                            <i class="fas fa-eye mx-1"></i>
                        </a>
                        <a asp-action="Edit" class="action-icon" asp-route-id="@student.Id">
                            <i class="fas fa-edit mx-1"></i>
                        </a>
                        <a asp-action="Delete" class="action-icon__danger" asp-route-id="@student.Id">
                            <i class="fas fa-trash-alt mx-1"></i>
                        </a>
                    </td>
                </tr>
                i++;
            }

        </tbody>
    </table>
</div>